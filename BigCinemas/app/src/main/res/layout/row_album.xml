<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:gravity="center_vertical"
    android:layout_height="105dp"
    android:padding="5dp"
    >
    <ImageView android:id="@+id/albumImage"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:scaleType="fitXY"
        android:src="@drawable/idmb_logo"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/albumImage"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        >
        <TextView android:text="Album Name"
            android:id="@+id/album_txt_01"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            />

        <TextView android:text="Release date"
            android:id="@+id/album_txt_02"
            android:textColor="#123aef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp" />
    </LinearLayout>

</RelativeLayout>