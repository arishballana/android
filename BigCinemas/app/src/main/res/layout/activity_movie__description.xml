<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arishballana.bigcinemas.Movie_Description"
    android:id="@+id/movie_description_layout"
    android:background="#F2F2F2">

    <ImageView
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:id="@+id/movie_image"
        android:src="@drawable/idmb_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MOVIE NAME : "
        android:id="@+id/movie_name_label"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MOVIE"
        android:lines="2"
        android:singleLine="true"
        android:id="@+id/movie_name"
        android:layout_below="@+id/ratingBar2"
        android:layout_toRightOf="@+id/movie_name_label"
        android:layout_toEndOf="@+id/movie_name_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DIRECTOR : "
        android:id="@+id/director_name_label"
        android:layout_below="@+id/movie_name_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="director"
        android:lines="2"
        android:singleLine="true"
        android:id="@+id/director_name"
        android:paddingTop="10dp"
        android:layout_alignTop="@+id/director_name_label"
        android:layout_toRightOf="@+id/director_name_label"
        android:layout_toEndOf="@+id/director_name_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WRITER NAME : "
        android:id="@+id/writer_name_label"
        android:layout_below="@+id/director_name_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="writer"
        android:lines="2"
        android:singleLine="true"
        android:id="@+id/writer_name"
        android:paddingTop="10dp"
        android:layout_above="@+id/year_name"
        android:layout_toRightOf="@+id/writer_name_label"
        android:layout_toEndOf="@+id/writer_name_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YEAR :  "
        android:id="@+id/year_name_label"
        android:layout_below="@+id/writer_name_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="year"
        android:singleLine="true"
        android:id="@+id/year_name"
        android:layout_below="@+id/writer_name_label"
        android:layout_toRightOf="@+id/year_name_label"
        android:layout_toEndOf="@+id/year_name_label"
        android:paddingTop="10dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:layout_above="@+id/movie_name_label"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView1"
            android:isIndicator="true"
            android:isScrollContainer="false"
        android:paddingTop="10dp"
        android:numStars="4"
        android:stepSize="1"/>

</RelativeLayout>
